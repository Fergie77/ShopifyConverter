<div li-element="product-variant-container" class="floating-add-to-cart_layout">
          <div class="product-header_form-block w-form">
            <form method="get" li-form:product="" name="wf-form-Add-To-Cart" data-name="Add To Cart" li-form="product" id="wf-form-Add-To-Cart" class="product-header_default-state is-floating" data-wf-page-id="688218e5775a24db35b5186b" data-wf-element-id="d740f348-eea5-29ff-1a31-942cef517846">
              {% if product.has_only_default_variant != true %}<div li-if="product.has_only_default_variant != true" class="product-header_option-list is-floating">
                <div li-element="product-options-loop" class="product-header_option">
                  <div class="product-header_radio-list"><label li-element="product-option-loop" class="product-header_radio w-radio">
                      <div class="w-form-formradioinput w-form-formradioinput--inputType-custom product-header_radio-button w-radio-input"></div><input type="radio" name="Radio" id="radio" data-name="Radio" li-element="product-option-input" style="opacity:0;position:absolute;z-index:-1" value="Radio">
                      <div li-js-object="'£' + variants.find(variant =&gt; variant.options.includes(variantName))?.price / 100" class="product-header_radio_label">£10</div>
                      <div class="product-header_radio_label is-dash">-</div><span li-element="product-option-name" class="product-header_radio_label w-form-label" for="radio">70cl bottle</span>
                    </label></div>
                </div>
              </div>{% endif %}
              <div class="product-header_add-to-cart-wrapper">
                <div li-js-if="selected_or_first_available_variant.available" class="product-header_buy-wrappper"><input class="product-header_quantity-field w-input" maxlength="256" name="quantity" li-element="add-to-cart-quantity" data-name="Quantity" placeholder="1" type="number" id="quantity" required="">
                  <a li-element="add-to-cart" href="#" class="button is-dark-outline w-button">Add to basket</a>
                  <a li-element="checkout-add-to-cart" href="#" class="button is-dark w-button">Buy Now</a>
                </div>
              </div>
            </form>
            <div class="hide w-form-done">
              <div>Thank you! Your submission has been received!</div>
            </div>
            <div class="hide w-form-fail">
              <div>Oops! Something went wrong while submitting the form.</div>
            </div>
          </div>
        </div>
